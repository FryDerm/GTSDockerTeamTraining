<!DOCTYPE html>
<html>
    <head>
        <title>Login</title>
        <link href="@Url.Content("~/scripts/base.css")" type="text/css" rel="stylesheet">
        <link href="@Url.Content("~/FrontEnd/GTS/fonts/typicons.min.css")" type="text/css" rel="stylesheet" />
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.11/angular.min.js"></script>
        <script src="@Url.Content("~/scripts/codemirror.js")"></script>
        <link href="@Url.Content("~/scripts/codemirror.css")" type="text/css" rel="stylesheet" />
    </head>

    <body class="themeEditor">
        <div class="auth module" ng-controller="LoginController">
            <div class="p-all-all">
                <form action='@Url.Action("Authenticate")' data-ajax="false" method="post">
                    <h2>Please Login</h2>
                    <div class="row m-t-all">
                        <input class="input-text" id="Username" name="Username" type="text" required placeholder="Username">
                    </div>
                    <div class="row m-t-all">
                        <input type="password" class="input-text" id="Password" name="Password" type="text" required placeholder="Password">
                    </div>

                    <div class="row m-t-all">
                        <button class="feature ui-control button ui-control button logon" type="submit" value="Authenticate" ng-click="login()"><span class="typcn typcn-user">Logon</span></button>
                    </div>

                </form>

                <div class="loading-mask" ng-show="loading">
                    <div class="shift">
                        <div class="img-shift">
                            <img src="@Url.Content("~/FrontEnd/GTS/img/ajax-loader.gif")" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <script src="@Url.Content("~/scripts/themeEditor.js")" type="text/javascript"></script>
    </body>

</html>
